<%- include('../partials/head') %>
    <%- include('../partials/nav') %>
    <% if(admin){%>
        <% if(periodico.length> 0){ %>

            <a href="/add_periodico" class="btn-plus"><i class="fa-solid fa-circle-plus"></i></a>

            <div class="container table-responsive tbm animate__animated animate__bounce">
                <table class="table table-light table-bordered table-hover">
                    <thead>
                        <tr class="table-dark">
                            <th>N#</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Fecha</th>
                            <th>Numero</th>
                            <th>Recurso</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < periodico.length; i++){ %>
                            <tr>
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= periodico[i].nombre %>
                                </td>
                                <td>
                                    <%= periodico[i].tipo %>
                                </td>
                                <td>
                                    <%= periodico[i].fechaEdicion %>
                                </td>
                                <td>
                                    <%= periodico[i].numero %>
                                </td>
                                <td>
                                    <img src="<%= periodico[i].img %>" class="img-tabla">
                                </td>
                                <td>
                                    <a href="/delete_periodico/<%=periodico[i].idPeriodico%>" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                                    <a href="/edit_periodico/<%=periodico[i].idPeriodico%>" class="btn btn-info"><i class="fa-solid fa-pencil"></i></a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <% } else{ %>
                <div class="container cont animate__animated animate__flipInY">
                    <div class="card">
                        <div class="card-body">
                            <h1>No hay periodicos</h1>
                        </div>
                    </div>
                </div>
                <% } %>
    <%}else{%>
        <div class="container">
            <div class="row">
                <% for(var i=0; i < periodico.length; i++){ %>
                    <div class="card col-12 col-md-3 col-sm-12 tarj animate__animated animate__backInDown">
                        <div class="card-header title-Tarj">
                            <h4><%= periodico[i].nombre%></h4>
                        </div>
                      <div class="card-body">
                        <center>
                            <img src="<%= periodico[i].img%>" class="img-tarj">
                          </center>
                      <hr>
                      <p>
                        <b>Categoria:</b> <%= periodico[i].tipo%>
                        <b>Autor:</b> <%= periodico[i].fechaEdicion%>
                        <b>Editorial:</b> <%= periodico[i].numero%>
                        <a href="<%= periodico[i].img%>" target="_blank" class="btn btn-info">
                            <i class="fa-sharp fa-solid fa-eye"></i>
                        </a>
                        </p>
                      </div>
                    </div>
                <%}%>
            </div>
        </div>
    <%}%>
<%- include('../partials/footer') %>