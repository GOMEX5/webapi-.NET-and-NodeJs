<%- include('../partials/nav') %>
<%- include('../partials/head') %>

<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card animate__animated animate__flipInY  cardCss2">
                <div class="card-header bg-dark text-white text-center">
                    <h2>Ingrese Periodico</h2>
                </div>
                <div class="card-body">
                    <form action="/insert_periodico" method="POST">
                        <div class="form-group mt-3">
                            <input type="text" name="nombre" required placeholder="Nombre" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <select name="tipo" class="form-select" aria-label="Default select example">
                                <option value="Diario">Diario</option>
                                <option value="Generalista">Generalista</option>
                                <option value="Especializado">Especializado</option>
                                <option value="Comunitario">Comunitario</option>
                                <option value="Local">Local</option>
                                <option value="Regional">Regional</option>
                                </select>
                        </div>
                                <div class="form-group mt-3">
                                    <input type="date" name="fechaEdicion" class="form-control" required>
                                </div>
                                <div class="form-group mt-3">
                                    <input type="number" name="numero" required placeholder="Numero" class="form-control">
                                </div>
                                <div class="form-group mt-3">
                                    <input type="text" name="img" required placeholder="Recurso" class="form-control">
                                </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                            <button type="submit" class="btn btn-primary mt-3">
                                Ingresar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>