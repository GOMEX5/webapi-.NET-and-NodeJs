<%- include('../partials/head') %>
    <%- include('../partials/nav') %>
        <% if(usuarios.length> 0){ %>
            <a href="/add_usuario" class="btn-plus"><i class="fa-solid fa-circle-plus"></i></a>

            <div class="container table-responsive tbm animate__animated animate__bounce">
                <table class="table table-light table-bordered table-hover">
                    <thead>
                        <tr class="table-dark">
                            <th>N#</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Tipo</th>
                            <th>Correo</th>
                            <th>Password</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < usuarios.length; i++){ %>
                            <tr>
                                <td>
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= usuarios[i].nombre %>
                                </td>
                                <td>
                                    <%= usuarios[i].apellido %>
                                </td>
                                <td>
                                    <%= usuarios[i].tipo %>
                                </td>
                                <td>
                                    <%= usuarios[i].correo %>
                                </td>
                                <td>
                                    <%= usuarios[i].password %>
                                </td>
                                <td>
                                    <a href="/delete_usuario/<%=usuarios[i].idUsuario%>" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                                    <a href="/edit_usuario/<%=usuarios[i].idUsuario%>" class="btn btn-info"><i class="fa-solid fa-pencil"></i></a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <% } else{ %>
                <div class="container cont animate__animated animate__flipInY">
                    <div class="card">
                        <div class="card-body">
                            <h1>No hay Libros</h1>
                        </div>
                    </div>
                </div>
                <% } %>
<%- include('../partials/footer') %>